<table>
  <tr>
    <% @books.each do |book| %>

    <td><%= link_to user_path(book.user.id) do %>
      <%= image_tag book.user.get_profile_image, size:'50x50' %>
        <% end %>
    </td>

    <td><%= link_to book_path(book.id) do %><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to book.tagname, search_book_path(keyword: book.tagname) %></td>
    <% end %>
  </tr>
</table>